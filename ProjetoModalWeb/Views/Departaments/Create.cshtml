@model ProjetoModalWeb.Models.Departament

@{
    Layout = null;
    ViewData["Title"] = "Departament";
}

<h4 class="display-7 text-center text-primary"> Departament <span class="fa fa-sitemap"></span></h4>

<div>
    <div class="text-center">
        <a class="btn btn-primary">New Departament <span class="fa fa-plus-circle"></span></a>
    </div>

    <div>

        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="card  align-items-center">
                        <div class="card-header text-black-50"></div>
                        <div class="card-body row">

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="DeptName" class="control-label"></label>
                                    <input asp-for="DeptName" class="form-control fw-bold text-primary h4" />
                                    <span asp-validation-for="DeptName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DeptChef" class="control-label"></label>
                                    <input asp-for="DeptChef" class="form-control fw-bold text-primary h4" />
                                    <span asp-validation-for="DeptChef" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DeptSChef" class="control-label"></label>
                                    <input asp-for="DeptSChef" class="form-control fw-bold text-primary h4" />
                                    <span asp-validation-for="DeptSChef" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DeptDataIn" class="control-label"></label>
                                    <input asp-for="DeptDataIn" class="form-control fw-bold text-primary h4" />
                                    <span asp-validation-for="DeptDataIn" class="text-danger"></span>
                                </div>
                            </div>                                                     

                        </div>
                    </div>

                    <div class=" modal-footer justify-content-center align-items-center">
                        <input type="submit" value="Create +" class="btn btn-success" />
                        <input type="button" value="Cancel?" class="btn btn-warning" data-dismiss="modal" />
                        <a class="btn btn-dark" asp-action="Index">Return <span class="fa fa-arrow-left"></span></a>
                    </div>

               </form>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
