@model ProjetoModalWeb.Models.Departament

@{
    Layout = null;
    ViewData["Title"] = "Departament";
}

<h4 class="display-7 text-center text-primary"> Departament <span class="fa fa-sitemap"></span></h4>

<div class="text-center">
    <a class="btn btn-info">Details<span class="fa fa-info-circle"></span></a>
</div>

<div>
    <div class="row">
        <div class="col-md-12">
                       
            <div class="card align-items-center">

                <div class="card-header text-black-50"></div>
                <div class="card-body row">

                    <div class="col-md-12>

                        <div class="form-group">
                            <h6 class="text-black-50">@Html.DisplayName("Departament Name")</h6>
                            <h5 class="bg-light text-primary">@Html.DisplayFor(model => model.DeptName)</h5>
                        </div>

                        <div class="form-group">
                            <h6 class="text-black-50">@Html.DisplayName("Departament Chief")</h6>
                            <h5 class="bg-light text-primary">@Html.DisplayFor(model => model.DeptChef)</h5>
                        </div>

                        <div class="form-group">
                            <h6 class="text-black-50">@Html.DisplayName("Departament Sub Chief")</h6>
                            <h5 class="bg-light text-primary">@Html.DisplayFor(model => model.DeptSChef)</h5>
                        </div>

                        <div class="form-group">
                            <h6 class="text-black-50">@Html.DisplayName("Departament Data In")</h6>
                            <h5 class="bg-light text-primary">@Html.DisplayFor(model => model.DeptDataIn)</h5>
                        </div>
                    </div>

                </div>
            </div>
                       
        </div>
    </div>
</div>

<div class="modal-footer justify-content-center align-items-center">
    <button type="button" class="btn btn-dark" data-dismiss="modal">Return <span class="fa fa-arrow-left"></span></button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}